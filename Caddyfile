# Configuração do Caddy para proxy reverso
# Substitua seu-dominio.com pelo seu domínio real

{
    # Configuração global do Caddy
    email admin@aion.eng.br  # Email para certificados SSL (Let's Encrypt)
    # Ou use staging para testes sem limite de rate:
    # ca https://acme-staging-v02.api.letsencrypt.org/directory
}

# HTTP - Redirecionar para HTTPS
http:// {
    redir https://{host}{uri} permanent
}

# HTTPS - Proxy reverso principal
av.aion.eng.br {
    # Proxy reverso para API backend (deve vir ANTES do handle /)
    handle /api/* {
        reverse_proxy backend:4000 {
            # Timeouts aumentados para requisições longas
            transport http {
                dial_timeout 30s
                response_header_timeout 120s
            }
        }
    }

    # Proxy para uploads
    handle /uploads/* {
        reverse_proxy backend:4000
    }

    # Proxy reverso para o frontend (aplicação React) - deve servir TODOS os arquivos estáticos
    handle {
        reverse_proxy frontend:80 {
            # Headers importantes para o frontend funcionar corretamente
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Headers de segurança
    header {
        # Habilitar HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Prevenir clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Prevenir MIME sniffing
        X-Content-Type-Options "nosniff"
        # XSS Protection
        X-XSS-Protection "1; mode=block"
        # Referrer Policy
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Logs
    log {
        output file /var/log/caddy/access.log
        format json
    }

    # Compressão
    encode gzip zstd
}

# HTTPS - Proxy reverso para aplicação PM (porta 8080)
pm.aion.eng.br {
    # Proxy reverso para aplicação rodando no host na porta 8080
    reverse_proxy host.docker.internal:8080 {
        # Headers importantes
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
        
        # Timeouts
        transport http {
            dial_timeout 30s
            response_header_timeout 120s
        }
    }

    # Headers de segurança
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Logs
    log {
        output file /var/log/caddy/pm-access.log
        format json
    }

    # Compressão
    encode gzip zstd
}

